<UserControl x:Class="GranularPad.Views.SnippetsGroupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#FFA0A0A0" CornerRadius="2">
        <StackPanel Margin="4">
            <TextBlock Text="{Binding Header}" FontWeight="Bold" Foreground="White"/>
            <ItemsControl ItemsSource="{Binding Items}" Margin="8,0,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
