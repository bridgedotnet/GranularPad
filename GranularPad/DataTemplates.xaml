<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:GranularPad.ViewModels"
                    xmlns:v="clr-namespace:GranularPad.Views">

    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <v:MainView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SnippetsGroupViewModel}">
        <v:SnippetsGroupView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SnippetViewModel}">
        <v:SnippetView />
    </DataTemplate>
</ResourceDictionary>