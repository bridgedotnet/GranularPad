<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="Transparent">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
        <StackPanel Background="#10000000" Margin="5">
            <TextBlock Text="ProgressBar" Margin="5"/>
            <ProgressBar Value="{Binding ElementName=scrollBar, Path=Value}" Height="20" Margin="5"/>
            <ScrollBar x:Name="scrollBar" Maximum="100" Value="50" SmallChange="1" LargeChange="10" Margin="5"/>
        </StackPanel>
        <StackPanel Background="#10000000" Margin="5">
            <TextBlock Text="Indeterminate" Margin="5"/>
            <ProgressBar IsIndeterminate="True" Height="20" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Grid>
